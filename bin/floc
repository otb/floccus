#!/usr/bin/env ruby

$:.push File.expand_path("../../lib", __FILE__)
require 'floccus'

HighLine.track_eof = false

program :version, Floccus::VERSION
program :description, 'A high level layer for managing your clouds.'

program :help, 'Authors', 'Owen Bossola <owen.bossola@gmail.com>'
program :help, 'Website', 'http://floccus.org'
program :help_formatter, :compact

default_command :put